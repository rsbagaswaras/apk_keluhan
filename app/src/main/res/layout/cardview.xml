<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="2"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tgl_penyampaian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggal Penyampaian"
            android:textSize="15dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/nama_responden"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:textSize="15dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/ruangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ruangan"
            android:textSize="15dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/kategori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kategori"
            android:textSize="15dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/keluhan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Keluhan"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/checkDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/img_keluhan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>