<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:padding="25dp"
    tools:context=".FormActivity"
    android:id="@+id/form_keluhan">

    <TextView
        android:id="@+id/form"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:text="Form Penyampaian Keluhan"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        android:textColor="#ffff"/>
    <TextView
        android:id="@+id/txt_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Responden"
        android:layout_marginTop="20dp"
        android:textColor="#ffff"/>
    <EditText
        android:id="@+id/edt_nama"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:padding="10dp"
        android:textColor="#ffff"
        android:background="#E0E0E0"
        android:inputType="textPersonName"
        android:layout_below="@+id/txt_nama"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt_ruangan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Ruangan"
        android:layout_marginTop="15dp"
        android:textColor="#ffff"/>
    <EditText
        android:id="@+id/edt_ruangan"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:padding="10dp"
        android:background="#E0E0E0"
        android:inputType="textPersonName"
        android:layout_below="@+id/txt_ruangan"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt_keluhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keluhan yang ingin disampaikan"
        android:layout_marginTop="15dp"
        android:textColor="#ffff"/>

    <EditText
        android:id="@+id/edt_keluhan"
        android:layout_width="345dp"
        android:layout_height="91dp"
        android:layout_below="@+id/txt_keluhan"
        android:layout_marginTop="5dp"
        android:background="#E0E0E0"
        android:ems="10"
        android:inputType="textPersonName"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/gambar"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_camera_alt_black_24dp"
        android:layout_gravity="center"
        android:textColor="#ffff"/>

    <ImageView
        android:id="@+id/btn_add"
        android:layout_width="323dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/rectag_bg"
        android:padding="12dp"
        app:srcCompat="@drawable/ic_file_upload_black_24dp"
        tools:ignore="VectorDrawableCompat" />
</LinearLayout>