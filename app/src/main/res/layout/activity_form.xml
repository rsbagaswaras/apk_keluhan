<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:id="@+id/form_keluhan">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="5" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

    <TextView
        android:id="@+id/form"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:text="Form Penyampaian Keluhan"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/txt_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Responden"
        android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/txt_respon"
                android:layout_width="345dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:text="Nama"
                android:textSize="15sp"
                android:padding="10dp"
                android:ems="10"
                android:background="#E0E0E0"
                android:textColor="#0E0E0E"/>

    <TextView
        android:id="@+id/txt_ruangan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Ruangan"
        android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/txt_namru"
                android:layout_width="345dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:text="Nama"
                android:textSize="15sp"
                android:padding="10dp"
                android:ems="10"
                android:background="#E0E0E0"
                android:textColor="#0E0E0E"/>

            <TextView
        android:id="@+id/txt_kategori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kategori"
        android:layout_marginTop="15dp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#E0E0E0"
                android:ems="10"
                android:entries="@array/list_kategori"
                android:padding="10dp" />

            <TextView
        android:id="@+id/txt_keluhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keluhan yang ingin disampaikan"
        android:layout_marginTop="15dp" />

    <EditText
        android:id="@+id/edt_keluhan"
        android:layout_width="345dp"
        android:layout_height="91dp"
        android:layout_below="@+id/txt_keluhan"
        android:layout_marginTop="5dp"
        android:background="#E0E0E0"
        android:ems="10"
        android:lines="3"
        android:inputType="textPersonName"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/gambar"
        android:layout_width="350dp"
        android:layout_height="180dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_camera_alt_black_24dp"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="323dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:onClick="Click3"
        android:background="@drawable/backgroundbutton"
        android:text="Upload"
        tools:ignore="OnClick" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>