<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:id="@+id/form_keluhan">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="5" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <TextView
        android:id="@+id/form"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:text="Form Penyampaian Keluhan"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="25dp"
        android:textColor="#B52E17"
        android:gravity="center"
        tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/txt_waktu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Penyampaian"
                android:textColor="#B52E17"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/idtanggal"
                android:layout_width="370dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="8dp"
                android:text="tanggal"
                android:textSize="15sp"
                android:padding="10dp"
                android:ems="10"
                android:background="#F1D991"
                android:textColor="#0E0E0E"/>

    <TextView
        android:id="@+id/txt_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Responden"
        android:textColor="#B52E17"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>

            <EditText
                android:id="@+id/edt_nama"
                android:layout_width="370dp"
                android:layout_height="45dp"
                android:layout_below="@+id/txt_keluhan"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp"
                android:background="#F1D991"
                android:ems="10"
                android:inputType="textPersonName"
                android:lines="3"
                tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt_ruangan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Ruangan"
        android:textColor="#B52E17"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/txt_namru"
                android:layout_width="370dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="8dp"
                android:text="Nama"
                android:textSize="15sp"
                android:padding="10dp"
                android:ems="10"
                android:background="#F1D991"
                android:textColor="#0E0E0E"/>

            <TextView
        android:id="@+id/txt_kategori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kategori"
                android:textColor="#B52E17"
        android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"/>

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp"
                android:background="#F1D991"
                android:ems="10"
                android:entries="@array/list_kategori"
                android:padding="10dp" />

            <TextView
        android:id="@+id/txt_keluhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keluhan yang ingin disampaikan"
                android:textColor="#B52E17"
        android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"/>

    <EditText
        android:id="@+id/edt_keluhan"
        android:layout_width="370dp"
        android:layout_height="91dp"
        android:layout_below="@+id/txt_keluhan"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:background="#F1D991"
        android:ems="10"
        android:lines="3"
        android:inputType="textPersonName"
        tools:ignore="MissingConstraints" />


            <ImageView
                android:id="@+id/gambar"
                android:layout_width="350dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_camera_alt_black_24dp"
                />
            <TextView
                android:id="@+id/txt_foto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tambahkan foto"
                android:textColor="#B52E17"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"/>


            <Button
        android:id="@+id/btn_add"
        android:layout_width="323dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:onClick="Click3"
        android:background="@drawable/backgroundbutton"
        android:text="Kirim"
       android:textStyle="bold"
        tools:ignore="OnClick" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>